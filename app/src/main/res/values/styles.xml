<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="wechat_content_style">
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#bfbfbf</item>
        <item name="android:editable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="wechat_swipe_del_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/swipe_close</item>
    </style>

    <style name="wechat_undo_del_style">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/undo_del</item>

    </style>

    <style name="wechat_voice_style">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#555</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">3dp</item>
    </style>
</resources>
