<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="6dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        >

        <ImageView
            android:id="@+id/ali_avatarIV"
            android:layout_width="@dimen/wechat_user_size"
            android:layout_height="@dimen/wechat_user_size"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ali_person"
            android:clickable="true"
            />


        <TextView
            android:id="@+id/alichat_money"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_toLeftOf="@id/ali_avatarIV"
            android:background="@drawable/ali_tonew"
            android:padding="10dp"
            />

    </RelativeLayout>


</LinearLayout>
